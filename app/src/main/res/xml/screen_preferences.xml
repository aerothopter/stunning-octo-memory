<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">


    <EditTextPreference
            android:defaultValue="4"
            android:key="preference_pollinginterval"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Polling Interval (Seconds)" />

    <EditTextPreference
            android:defaultValue="0.4"
            android:key="preference_thresholdstopped"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Stopped Threshold (mph)" />

    <EditTextPreference
            android:defaultValue="5"
            android:key="preference_thresholddriving"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Driving Threshold (mph)" />

</PreferenceScreen>